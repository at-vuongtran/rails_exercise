<% if @teams.any? %>
  <h1>All teams</h1>
  <table class="table">
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Lead</th>
      <th scope="col">Sub-Lead</th>
    </tr>
    <% @teams.each_with_index do |team, index| %>
      <% if team.leader %>
        <tr>
      <% else %>
        <tr class="no-leader">
      <% end %>
        <td scope="row">
          <%= index +1 %>
        </td>
        <td>
          <%= link_to team.name, team_path(team) %>
        </td>
        <td>
          <%= team.leader.nil? ? "" : team.leader.name %>
        </td>
        <td>
          <%= team.sub_leader.nil? ? "" : team.sub_leader.name %>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <h3>No team to show</h3>
<% end %>